---
interface Props {
  name?: string;
  title?: string;
  tagline?: string;
}

const {
  name = "Métus Gbogbohoundada",
  title = "Étudiant en Informatique",
  tagline = "Étudiant en L3 Informatique CILS à l'Université Évry Paris-Saclay, je suis animé par la conviction que l'analyse de données est un levier puissant pour répondre aux grands défis sociétaux et environnementaux de demain.",
} = Astro.props;
---

<header class="hero">
  <div class="hero-content">
    <h1 class="hero-name" data-text={name}>
      <span class="typewriter-text"></span>
      <span class="typewriter-underline"></span>
    </h1>
    <p class="hero-title">{title}</p>
    <p class="hero-tagline">{tagline}</p>
    <nav class="hero-nav" aria-label="Navigation rapide">
      <a href="#projects" class="hero-link link-hover">Projets</a>
      <span class="hero-separator" aria-hidden="true">/</span>
      <a href="#contact" class="hero-link link-hover">Contact</a>
    </nav>
  </div>
</header>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-xl);
    padding-top: calc(var(--spacing-xl) + 60px);
    background-color: var(--bg-primary);
    transition: background-color 0.3s ease;
  }

  .hero-content {
    max-width: var(--content-width);
    text-align: center;
  }

  .hero-name {
    font-family: var(--font-family-heading);
    font-size: var(--font-size-5xl);
    font-weight: 700;
    letter-spacing: -0.01em;
    color: var(--text-primary);
    margin-bottom: var(--spacing-sm);
    line-height: 1.2;
    position: relative;
    display: inline-block;
    transition: color 0.3s ease;
  }

  .typewriter-text {
    display: inline-block;
  }

  .typewriter-underline {
    position: absolute;
    bottom: -2px;
    left: 0;
    height: 3px;
    background: var(--text-primary);
    transition: opacity 0.5s ease-out, background 0.3s ease;
  }

  .typewriter-underline.fade-out {
    opacity: 0;
  }

  .hero-title {
    font-family: var(--font-family);
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--text-secondary);
    margin-bottom: var(--spacing-lg);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    transition: color 0.3s ease;
  }

  .hero-tagline {
    font-size: var(--font-size-lg);
    color: var(--text-primary);
    line-height: 1.8;
    margin-bottom: var(--spacing-xl);
    max-width: 36rem;
    margin-left: auto;
    margin-right: auto;
    transition: color 0.3s ease;
  }

  .hero-nav {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-sm);
  }

  .hero-link {
    font-family: var(--font-family);
    font-size: var(--font-size-sm);
    font-weight: 500;
    color: var(--text-primary);
    padding: var(--spacing-xs) 0;
    letter-spacing: 0.02em;
    transition: color 0.3s ease;
  }

  .hero-separator {
    color: var(--text-secondary);
    user-select: none;
    transition: color 0.3s ease;
  }

  @media (max-width: 768px) {
    .hero {
      padding: var(--spacing-lg);
    }

    .hero-name {
      font-size: var(--font-size-4xl);
    }

    .hero-title {
      font-size: var(--font-size-base);
    }

    .hero-tagline {
      font-size: var(--font-size-base);
    }
  }
</style>

<script>
  const typewriterEffect = () => {
    const nameElement = document.querySelector('.hero-name') as HTMLElement;
    if (!nameElement) return;

    const textElement = nameElement.querySelector('.typewriter-text') as HTMLElement;
    const underlineElement = nameElement.querySelector('.typewriter-underline') as HTMLElement;
    
    const fullText = nameElement.getAttribute('data-text') || '';
    const typingSpeed = 1000 / fullText.length; // 1 seconde pour tout le texte
    
    let currentIndex = 0;
    
    const typeNextChar = () => {
      if (currentIndex < fullText.length) {
        textElement.textContent += fullText[currentIndex];
        
        // Mettre à jour la largeur de la barre de soulignement
        const textWidth = textElement.offsetWidth;
        underlineElement.style.width = `${textWidth}px`;
        
        currentIndex++;
        setTimeout(typeNextChar, typingSpeed);
      } else {
        // Animation terminée, faire disparaître la barre
        setTimeout(() => {
          underlineElement.classList.add('fade-out');
        }, 300);
      }
    };
    
    // Démarrer l'animation
    typeNextChar();
  };

  // Démarrer l'animation au chargement
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', typewriterEffect);
  } else {
    typewriterEffect();
  }
</script>

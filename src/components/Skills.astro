---
interface SkillCategory {
  name: string;
  items: string[];
}

interface Props {
  categories?: SkillCategory[];
}

const {
  categories = [
    {
      name: "Langages",
      items: ["Latex", "SQL", "HTML5/CSS3", "JavaScript", "Python", "Java","C","PHP", "Markdown"],
    },
    {
      name: "Outils & Frameworks",
      items: ["Vue.js" ,"Astro.js", "Git/GitHub", "MySQL", "PostgreSQL", "Numpy","Matplotlib", "Excel", "TailwindCss" ],
    },
    {
      name: "Environnements et OS",
      items: ["Visual Studio Code", "PyCharm", "MacOS", "Windows", "Linux"],
    },
    /*{
      name: "Concepts",
      items: [
        "Algorithmique",
        "Structures de données",
        "Modélisation Objet UML et Mérise",
        "Nettoyage et visualisation de données",
        "Bases de données relationnelles",
        "Développement web front-end",
        "Développement web back-end",
        "Contrôle de version avec Git",
      ],
    },*/
  ],
} = Astro.props;
---

<section id="skills" class="skills section-animate" aria-labelledby="skills-heading">
  <div class="skills-container">
    <h2 id="skills-heading" class="section-title">Compétences</h2>
    <div class="skills-grid">
      {
        categories.map((category) => (
          <div class="skill-category">
            <h3 class="category-name">{category.name}</h3>
            <ul class="skill-list" role="list">
              {category.items.map((skill) => (
                <li class="skill-item">{skill}</li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .skills {
    padding: var(--spacing-4xl) var(--spacing-xl);
    background-color: var(--bg-primary);
    transition: background-color 0.3s ease;
  }

  .skills-container {
    max-width: var(--content-width);
    margin: 0 auto;
  }

  .section-title {
    font-family: var(--font-family);
    font-size: var(--font-size-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--text-secondary);
    margin-bottom: var(--spacing-md);
    padding-bottom: var(--spacing-sm);
    border-bottom: 1px solid var(--border-color);
    transition: color 0.3s ease, border-color 0.3s ease;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-2xl);
    margin-top: var(--spacing-lg);
  }

  .skill-category {
    /* Empty for now, grid handles layout */
  }

  .category-name {
    font-family: var(--font-family);
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--spacing-md);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    transition: color 0.3s ease;
  }

  .skill-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .skill-item {
    font-size: var(--font-size-base);
    color: var(--text-primary);
    line-height: 1.75;
    transition: color 0.3s ease;
  }

  @media (max-width: 768px) {
    .skills {
      padding: var(--spacing-3xl) var(--spacing-lg);
    }

    .skills-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }

    .skill-category {
      padding-bottom: var(--spacing-lg);
      border-bottom: 1px solid var(--border-color);
      transition: border-color 0.3s ease;
    }

    .skill-category:last-child {
      border-bottom: none;
      padding-bottom: 0;
    }
  }
</style>

---
interface SkillCategory {
  name: string;
  items: string[];
}

interface Props {
  categories?: SkillCategory[];
}

const {
  categories = [
    {
      name: "Langages",
      items: ["Latex", "SQL"],
    },
    {
      name: "Outils & Frameworks",
      items: ["Vue", "Node.js", "Git", "Docker", "PostgreSQL", "Linux"],
    },
    {
      name: "Concepts",
      items: [
        "Algorithmique",
        "Structures de données",
        "Modélisation Objet UML et Mérise",
        ""
      ],
    },
  ],
} = Astro.props;
---

<section id="skills" class="skills section-animate" aria-labelledby="skills-heading">
  <div class="skills-container">
    <h2 id="skills-heading" class="section-title">Compétences</h2>
    <div class="skills-grid">
      {
        categories.map((category) => (
          <div class="skill-category">
            <h3 class="category-name">{category.name}</h3>
            <ul class="skill-list" role="list">
              {category.items.map((skill) => (
                <li class="skill-item">{skill}</li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .skills {
    padding: var(--spacing-4xl) var(--spacing-xl);
    background-color: var(--color-white);
  }

  .skills-container {
    max-width: var(--content-width);
    margin: 0 auto;
  }

  .section-title {
    font-family: var(--font-family);
    font-size: var(--font-size-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-gray);
    margin-bottom: var(--spacing-md);
    padding-bottom: var(--spacing-sm);
    border-bottom: 1px solid var(--color-gray-lighter);
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-2xl);
    margin-top: var(--spacing-lg);
  }

  .skill-category {
    /* Empty for now, grid handles layout */
  }

  .category-name {
    font-family: var(--font-family);
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--color-dark);
    margin-bottom: var(--spacing-md);
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .skill-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .skill-item {
    font-size: var(--font-size-base);
    color: var(--color-gray-dark);
    line-height: 1.75;
  }

  @media (max-width: 768px) {
    .skills {
      padding: var(--spacing-3xl) var(--spacing-lg);
    }

    .skills-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }

    .skill-category {
      padding-bottom: var(--spacing-lg);
      border-bottom: 1px solid var(--color-gray-lighter);
    }

    .skill-category:last-child {
      border-bottom: none;
      padding-bottom: 0;
    }
  }
</style>

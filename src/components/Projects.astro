---
interface Project {
  title: string;
  description: string;
  technologies: string[];
  link?: string;
}

interface Props {
  projects?: Project[];
}

// Mapping des technologies vers leurs identifiants Simple Icons
const techIcons: Record<string, string> = {
  "Python": "python",
  "Java": "java",
  "JavaScript": "javascript",
  "TypeScript": "typescript",
  "React": "react",
  "Node.js": "nodedotjs",
  "Git": "git",
  "GitHub": "github",
  "PostgreSQL": "postgresql",
  "SQLite": "sqlite",
  "JSON": "json",
  "LaTeX": "latex",
  "UML": "uml",
  "Figma": "figma",
  "HTML": "html5",
  "CSS": "css3",
};

const {
  projects = [
    {
      title: "Connect 4 Game 8 x 9",
      description:
        "Développement d'un jeu de Puissance 4 en Python avec une grille personnalisée de 8x9. Implémentation de l'algorithme Minimax pour une IA compétitive.",
      technologies: ["Python", "JSON", "Git" , "GitHub", "PostgreSQL"],
      link: "https://github.com",
    },
    {
      title: "Plateforme de gestion hotelière",
      description:
        "Développement d'une application web complète pour la gestion hôtelière, incluant la réservation de chambres, la gestion des clients et la facturation.",
      technologies: ["Java", "Swing", "FlatLaf", "SQLite"],
      link: "https://github.com",
    },
    {
      title: "Conception du système de gestion d'un réseaux de transport",
      description:
        "Analyse Fonctionnelle et Conception du nouveau Système de la Société TRICE. Projet académique de Modélisation Objet UML.",
      technologies: ["LaTeX", "UML", "Git", "GitHub", "Figma"],
      link: "https://github.com",
    },
  ],
} = Astro.props;
---

<section id="projects" class="projects section-animate" aria-labelledby="projects-heading">
  <div class="projects-container">
    <h2 id="projects-heading" class="section-title">Projets</h2>
    <div class="projects-list">
      {
        projects.map((project, index) => (
          <article class="project-item">
            <div class="project-header">
              <span class="project-number" aria-hidden="true">
                {String(index + 1).padStart(2, "0")}
              </span>
              <h3 class="project-title">
                {project.link ? (
                  <a
                    href={project.link}
                    class="project-link link-hover"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    {project.title}
                    <span class="sr-only">(ouvre dans un nouvel onglet)</span>
                  </a>
                ) : (
                  project.title
                )}
              </h3>
            </div>
            <p class="project-description">{project.description}</p>
            <div class="project-footer">
              <ul class="project-tech" role="list">
                {project.technologies.map((tech) => (
                  <li class="tech-item">
                    {techIcons[tech] ? (
                      <img
                        src={`https://cdn.simpleicons.org/${techIcons[tech]}/888888`}
                        alt={tech}
                        title={tech}
                        class="tech-logo"
                      />
                    ) : (
                      <span class="tech-name">{tech}</span>
                    )}
                  </li>
                ))}
              </ul>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>

<style>
  .projects {
    padding: var(--spacing-4xl) var(--spacing-xl);
    background-color: var(--bg-secondary);
    transition: background-color 0.3s ease;
  }

  .projects-container {
    max-width: var(--content-width);
    margin: 0 auto;
  }

  .section-title {
    font-family: var(--font-family);
    font-size: var(--font-size-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--text-secondary);
    margin-bottom: var(--spacing-xl);
    transition: color 0.3s ease;
  }

  .projects-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2xl);
  }

  .project-item {
    padding-bottom: var(--spacing-2xl);
    border-bottom: 1px solid var(--border-color);
    transition: border-color 0.3s ease;
  }

  .project-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .project-header {
    display: flex;
    align-items: baseline;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-sm);
  }

  .project-number {
    font-size: var(--font-size-xs);
    font-weight: 500;
    color: var(--text-secondary);
    font-variant-numeric: tabular-nums;
    transition: color 0.3s ease;
  }

  .project-title {
    font-family: var(--font-family-heading);
    font-size: var(--font-size-xl);
    font-weight: 700;
    color: var(--text-primary);
    line-height: 1.4;
    transition: color 0.3s ease;
  }

  .project-link {
    color: var(--text-primary);
    transition: color 0.3s ease;
  }

  .project-description {
    font-size: var(--font-size-base);
    color: var(--text-primary);
    line-height: 1.7;
    margin-bottom: var(--spacing-md);
    margin-left: calc(var(--spacing-md) + 1.5rem);
    transition: color 0.3s ease;
  }

  .project-footer {
    margin-left: calc(var(--spacing-md) + 1.5rem);
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    align-items: center;
  }

  .tech-item {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem 0.75rem;
    background-color: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 6px;
    transition: all 0.3s ease;
    width: auto;
  }

  .tech-item:hover {
    background-color: rgba(255, 255, 255, 0.08);
    border-color: rgba(255, 255, 255, 0.15);
    transform: translateY(-2px);
  }

  .tech-logo {
    width: 24px;
    height: 24px;
    display: block;
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .tech-item:hover .tech-logo {
    opacity: 1;
  }

  .tech-name {
    font-family: var(--font-family);
    font-size: var(--font-size-xs);
    font-weight: 500;
    color: var(--text-secondary);
    white-space: nowrap;
    display: block;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  @media (max-width: 768px) {
    .projects {
      padding: var(--spacing-3xl) var(--spacing-lg);
    }

    .project-description,
    .project-tech {
      margin-left: 0;
    }

    .project-header {
      flex-direction: column;
      gap: var(--spacing-xs);
    }
  }
</style>

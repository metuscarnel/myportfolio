    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  @media (max-width: 768px) {
    .projects {
      padding: var(--spacing-3xl) var(--spacing-lg);
    }

    .project-description,
    .project-tech {
      margin-left: 0;
    }

    .project-header {
      flex-direction: column;
      gap: var(--spacing-xs);

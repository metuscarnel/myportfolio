---
interface Project {
  title: string;
  description: string;
  technologies: string[];
  link?: string;
}

interface Props {
  projects?: Project[];
}

const {
  projects = [
    {
      title: "Plateforme de gestion hotelière",
      description:
        "Application web full-stack permettant la création, l'organisation et le suivi de tâches en équipe. Implémentation de fonctionnalités temps réel avec WebSocket.",
      technologies: ["React", "Node.js", "PostgreSQL", "Socket.io"],
      link: "https://github.com",
    },
    {
      title: "Conception du  ",
      description:
        "Système de recommandation basé sur le filtrage collaboratif pour une application de streaming musical. Projet académique de Machine Learning.",
      technologies: ["Python", "Scikit-learn", "Pandas", "NumPy"],
      link: "https://github.com",
    },
    {
      title: "Connect 4 Game 8 x 9",
      description:
        "Conception et développement d'une API RESTful complète pour une plateforme e-commerce, avec authentification JWT et documentation OpenAPI.",
      technologies: ["Python", "JSON" ,"Git/GitHub"],
      link: "https://github.com",
    },
  ],
} = Astro.props;
---

<section id="projects" class="projects section-animate" aria-labelledby="projects-heading">
  <div class="projects-container">
    <h2 id="projects-heading" class="section-title">Projets</h2>
    <div class="projects-list">
      {
        projects.map((project, index) => (
          <article class="project-item">
            <div class="project-header">
              <span class="project-number" aria-hidden="true">
                {String(index + 1).padStart(2, "0")}
              </span>
              <h3 class="project-title">
                {project.link ? (
                  <a
                    href={project.link}
                    class="project-link link-hover"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    {project.title}
                    <span class="sr-only">(ouvre dans un nouvel onglet)</span>
                  </a>
                ) : (
                  project.title
                )}
              </h3>
            </div>
            <p class="project-description">{project.description}</p>
            <ul class="project-tech" role="list">
              {project.technologies.map((tech) => (
                <li class="tech-item">{tech}</li>
              ))}
            </ul>
          </article>
        ))
      }
    </div>
  </div>
</section>

<style>
  .projects {
    padding: var(--spacing-4xl) var(--spacing-xl);
    background-color: var(--color-pure-white);
  }

  .projects-container {
    max-width: var(--content-width);
    margin: 0 auto;
  }

  .section-title {
    font-family: var(--font-family);
    font-size: var(--font-size-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-gray);
    margin-bottom: var(--spacing-xl);
  }

  .projects-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2xl);
  }

  .project-item {
    padding-bottom: var(--spacing-2xl);
    border-bottom: 1px solid var(--color-gray-lighter);
  }

  .project-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .project-header {
    display: flex;
    align-items: baseline;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-sm);
  }

  .project-number {
    font-size: var(--font-size-xs);
    font-weight: 500;
    color: var(--color-gray-light);
    font-variant-numeric: tabular-nums;
  }

  .project-title {
    font-family: var(--font-family-heading);
    font-size: var(--font-size-xl);
    font-weight: 700;
    color: var(--color-dark);
    line-height: 1.4;
  }

  .project-link {
    color: var(--color-dark);
  }

  .project-description {
    font-size: var(--font-size-base);
    color: var(--color-gray-dark);
    line-height: 1.7;
    margin-bottom: var(--spacing-md);
    margin-left: calc(var(--spacing-md) + 1.5rem);
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
    margin-left: calc(var(--spacing-md) + 1.5rem);
  }

  .tech-item {
    font-family: var(--font-family);
    font-size: var(--font-size-xs);
    font-weight: 500;
    color: var(--color-gray);
    padding: 0.25rem 0.75rem;
    border: 1px solid var(--color-gray-lighter);
    border-radius: 2px;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  @media (max-width: 768px) {
    .projects {
      padding: var(--spacing-3xl) var(--spacing-lg);
    }

    .project-description,
    .project-tech {
      margin-left: 0;
    }

    .project-header {
      flex-direction: column;
      gap: var(--spacing-xs);
    }
  }
</style>
